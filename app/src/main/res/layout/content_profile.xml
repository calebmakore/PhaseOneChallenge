<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <TextView
        android:id="@+id/androidTextView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="South Africa"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/countryTextview"
        app:layout_constraintStart_toEndOf="@+id/countryTextview" />

    <TextView
        android:id="@+id/emailLableTextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="Email:"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/countryTextview"
        app:layout_constraintTop_toBottomOf="@+id/countryTextview" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="calebmakore@gmail.com"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/emailLableTextView"
        app:layout_constraintStart_toEndOf="@+id/emailLableTextView" />

    <TextView
        android:id="@+id/phoneNumberLabletextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Phone Number:"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/emailLableTextView"
        app:layout_constraintTop_toBottomOf="@+id/emailLableTextView" />

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="+27456673456"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/phoneNumberLabletextView"
        app:layout_constraintStart_toEndOf="@+id/phoneNumberLabletextView" />

    <TextView
        android:id="@+id/countryTextview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="Country:"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/androidlabletextView"
        app:layout_constraintTop_toBottomOf="@+id/androidlabletextView" />

    <TextView
        android:id="@+id/slackUsernameLableTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Slack Username:"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/phoneNumberLabletextView"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberLabletextView" />

    <TextView
        android:id="@+id/androidTextView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Android"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/slackUsernameLableTextView"
        app:layout_constraintStart_toEndOf="@+id/slackUsernameLableTextView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="197dp"
        android:layout_height="148dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/caleb" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="134dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:text="@string/caleb_makore"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#444"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/androidlabletextView"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Track:"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow" />

    <TextView
        android:id="@+id/androidTextView"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="28dp"
        android:text="Android"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/androidlabletextView"
        app:layout_constraintStart_toEndOf="@+id/androidlabletextView" />

</android.support.constraint.ConstraintLayout>